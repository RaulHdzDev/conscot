<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/Regresar_a_constructoras"
                android:layout_width="48dp"
                android:layout_height="46dp"
                android:background="@drawable/amarillo"
                android:foreground="@drawable/ic_back" />
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="154dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="136dp"
                    android:background="#3e3e3e"
                    android:orientation="vertical">


                    <ImageView
                        android:id="@+id/logo_header"
                        android:layout_width="110dp"
                        android:layout_height="84dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="30dp"
                        android:src="@drawable/conscotlogo"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.093" />


                </LinearLayout>


            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/blanco_header"
                android:layout_marginBottom="10dp">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#ffff"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15dp"
                            android:fontFamily="@font/comfortaa"
                            android:text="Categorias"
                            android:textColor="#929292"
                            android:textSize="15dp" />

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <FrameLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="15dp">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:orientation="horizontal">

                                        <FrameLayout

                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_margin="10dp">

                                            <LinearLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:orientation="vertical">

                                                <Button
                                                    android:id="@+id/btn_cemento"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:background="@drawable/img_cemento" />

                                                <TextView
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:fontFamily="@font/comfortaa"
                                                    android:text="Cemento"
                                                    android:textAlignment="center"
                                                    android:textColor="#929292"
                                                    android:textSize="15dp" />

                                            </LinearLayout>


                                        </FrameLayout>

                                        <FrameLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_margin="10dp">

                                            <LinearLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:orientation="vertical">

                                                <Button
                                                    android:id="@+id/btAceros"
                                                    android:layout_width="90dp"
                                                    android:layout_height="90dp"
                                                    android:background="@drawable/img_aceros" />

                                                <TextView
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:fontFamily="@font/comfortaa"
                                                    android:text="Aceros"
                                                    android:textAlignment="center"
                                                    android:textColor="#929292"
                                                    android:textSize="15dp" />

                                            </LinearLayout>


                                        </FrameLayout>

                                        <FrameLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_margin="10dp">

                                            <LinearLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:orientation="vertical">

                                                <Button
                                                    android:id="@+id/Acabados_bt"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:background="@drawable/img_acabados" />

                                                <TextView
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:fontFamily="@font/comfortaa"
                                                    android:text="Acabados"
                                                    android:textAlignment="center"
                                                    android:textColor="#929292"
                                                    android:textSize="15dp" />

                                            </LinearLayout>


                                        </FrameLayout>


                                    </LinearLayout>


                                </FrameLayout>

                                <FrameLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginTop="25dp">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:orientation="horizontal">

                                        <FrameLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_margin="10dp">

                                            <LinearLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:orientation="vertical">

                                                <Button
                                                    android:id="@+id/Plomeria_bt"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:background="@drawable/img_plomeria" />

                                                <TextView
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:fontFamily="@font/comfortaa"
                                                    android:text="Plomeria"
                                                    android:textAlignment="center"
                                                    android:textColor="#929292"
                                                    android:textSize="15dp" />

                                            </LinearLayout>


                                        </FrameLayout>

                                        <FrameLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_margin="10dp">

                                            <LinearLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:orientation="vertical">

                                                <Button
                                                    android:id="@+id/Ferreteria_bt"
                                                    android:layout_width="90dp"
                                                    android:layout_height="90dp"
                                                    android:background="@drawable/img_ferreteria" />

                                                <TextView
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:fontFamily="@font/comfortaa"
                                                    android:text="Ferreteria"
                                                    android:textAlignment="center"
                                                    android:textColor="#929292"
                                                    android:textSize="15dp" />

                                            </LinearLayout>


                                        </FrameLayout>

                                        <FrameLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_margin="10dp">

                                            <LinearLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:orientation="vertical">

                                                <Button
                                                    android:id="@+id/Electricos_bt"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:background="@drawable/img_elect" />

                                                <TextView
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:fontFamily="@font/comfortaa"
                                                    android:text="ElÃ©ctrico"
                                                    android:textAlignment="center"
                                                    android:textColor="#929292"
                                                    android:textSize="15dp" />

                                            </LinearLayout>


                                        </FrameLayout>


                                    </LinearLayout>


                                </FrameLayout>

                                <FrameLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginTop="25dp"
                                    android:layout_marginBottom="35dp">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:orientation="horizontal">

                                        <FrameLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_margin="10dp">

                                            <LinearLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:orientation="vertical">

                                                <Button
                                                    android:id="@+id/btOtros"
                                                    android:layout_width="90dp"
                                                    android:layout_height="90dp"
                                                    android:background="@drawable/img_construction" />

                                                <TextView
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:fontFamily="@font/comfortaa"
                                                    android:text="Otros"
                                                    android:textAlignment="center"
                                                    android:textColor="#929292"
                                                    android:textSize="15dp" />

                                            </LinearLayout>


                                        </FrameLayout>


                                    </LinearLayout>


                                </FrameLayout>


                            </LinearLayout>

                        </FrameLayout>

                    </LinearLayout>


                </ScrollView>


            </FrameLayout>


        </LinearLayout>


    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>