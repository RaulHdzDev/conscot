<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="210dp"
                    android:background="#3e3e3e"
                    android:orientation="vertical"
                    >

                    <ImageView
                        android:id="@+id/logo_header"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="30dp"
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:src="@drawable/conscotlogo"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.093" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="30dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginLeft="20dp"
                        android:textSize="20dp"
                        android:background="@drawable/blanco_header"
                        android:fontFamily="@font/comfortaa_bold"
                        android:text="Escoge una constructora"
                        android:gravity="center"
                        android:textColor="#606060"
                        />

                </LinearLayout>


            </FrameLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:background="#ffff">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="20dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            >

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/btn_constructora"
                                android:layout_margin="5dp"
                                android:gravity="center"
                                android:padding="5dp">
                            <ImageView
                                android:layout_width="150dp"
                                android:layout_height="150dp"
                                android:padding="15dp"
                                android:background="@drawable/brocha_png"/>
                            </LinearLayout>
                        </FrameLayout>

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            >

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/btn_constructora"
                                android:layout_margin="5dp"
                                android:gravity="center"
                                android:padding="5dp">
                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="150dp"
                                    android:padding="15dp"
                                    android:background="@drawable/materialesmartinez_logo"/>
                            </LinearLayout>
                        </FrameLayout>

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            >

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/btn_constructora"
                                android:layout_margin="5dp"
                                android:gravity="center"
                                android:padding="5dp">
                                <ImageView
                                    android:layout_width="200dp"
                                    android:layout_height="150dp"
                                    android:padding="15dp"
                                    android:background="@drawable/construrama_logo"/>
                            </LinearLayout>
                        </FrameLayout>

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            >

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/btn_constructora"
                                android:layout_margin="5dp"
                                android:gravity="center"
                                android:padding="5dp">
                                <ImageView
                                    android:layout_width="200dp"
                                    android:layout_height="150dp"
                                    android:padding="15dp"
                                    android:background="@drawable/dimarsa_logo"/>
                            </LinearLayout>
                        </FrameLayout>

                    </LinearLayout>


                </ScrollView>




            </FrameLayout>




        </LinearLayout>





    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>