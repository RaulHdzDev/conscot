<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#686868"
        app:layout_constraintEnd_toEndOf="parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_horizontal"
                            >

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"
                                android:orientation="horizontal">
                                <TextView
                                    android:layout_width="130dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:fontFamily="@font/comfortaa"
                                    android:text="Constructora"
                                    android:textAlignment="textStart"
                                    android:textColor="#000"
                                    android:textSize="15dp" />
                                <TextView
                                    android:layout_width="80dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:fontFamily="@font/comfortaa"
                                    android:text="Material"
                                    android:textAlignment="textStart"
                                    android:textColor="#000"
                                    android:textSize="15dp" />

                                <TextView
                                    android:layout_width="80dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:fontFamily="@font/comfortaa"
                                    android:text="Cant"
                                    android:textAlignment="center"
                                    android:textColor="#000"
                                    android:textSize="15dp" />

                                <TextView
                                    android:layout_width="95dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:fontFamily="@font/comfortaa"
                                    android:text="Precio"
                                    android:textAlignment="center"
                                    android:textColor="#000"
                                    android:textSize="15dp" />

                            </LinearLayout>


                        </FrameLayout>


                    </LinearLayout>


                </FrameLayout>

                <FrameLayout
                    android:layout_width="398dp"
                    android:layout_height="500dp"
                    android:layout_gravity="center_horizontal"
                    android:background="#ffff">

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <androidx.recyclerview.widget.RecyclerView
                                    android:id="@+id/productos_cotizados_construccion"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent" />


                            </FrameLayout>


                        </LinearLayout>

                    </ScrollView>
                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#686868">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                            </LinearLayout>


                        </FrameLayout>

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginTop="10dp"
                                    android:fontFamily="@font/comfortaa"
                                    android:text="Total:"
                                    android:textAlignment="center"
                                    android:textColor="#fff"
                                    android:textSize="15dp" />

                                <TextView
                                    android:id="@+id/precio_total_C"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginEnd="10dp"
                                    android:fontFamily="@font/comfortaa"
                                    android:text="-@Total"
                                    android:textAlignment="textEnd"
                                    android:textColor="#fff"
                                    android:textSize="15dp" />


                            </LinearLayout>


                        </FrameLayout>
                        <LinearLayout
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">


                            <Button
                                android:id="@+id/Cotizar_C"
                                android:layout_width="160dp"
                                android:layout_height="wrap_content"
                                android:background="@drawable/btn_constructora"
                                android:fontFamily="@font/comfortaa_bold"
                                android:text="Cotizar"
                                android:textColor="#fff" />
                            <View
                                android:layout_width="50dp"
                                android:layout_height="wrap_content"/>

                            <Button
                                android:id="@+id/Limpiar_C"
                                android:layout_width="143dp"
                                android:layout_height="wrap_content"
                                android:background="@drawable/btn_constructora"
                                android:fontFamily="@font/comfortaa_bold"
                                android:text="Limpiar lista"
                                android:textColor="#fff" />

                        </LinearLayout>
                    </LinearLayout>


                </FrameLayout>
            </LinearLayout>
        </ScrollView>


    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>