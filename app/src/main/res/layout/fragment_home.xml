<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:id="@+id/container_home"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >



        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="#3e3e3e"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />


        <ViewFlipper
            android:id="@+id/v_flipper"
            android:layout_width="match_parent"
            android:layout_height="237dp"
            android:layout_gravity="center"
            android:background="@drawable/deslise"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.108" />

        <TextView
            android:id="@+id/constructora"
            android:layout_width="340dp"
            android:layout_height="83dp"
            android:background="@drawable/amarillo"
            android:fontFamily="@font/comfortaa_bold"
            android:gravity="center"
            android:text="Constructoras             "
            android:textSize="25dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/v_flipper"
            app:layout_constraintVertical_bias="0.109" />

        <TextView
            android:id="@+id/tareas"
            android:layout_width="340dp"
            android:layout_height="83dp"
            android:background="@drawable/amarillo"
            android:fontFamily="@font/comfortaa_bold"
            android:gravity="center"
            android:text="Notas                          "
            android:textSize="25dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.492"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/constructora"
            app:layout_constraintVertical_bias="0.06" />

        <TextView
            android:id="@+id/Mapa"
            android:layout_width="340dp"
            android:layout_height="83dp"
            android:background="@drawable/amarillo"
            android:fontFamily="@font/comfortaa_bold"
            android:gravity="center"
            android:text="Mapa                         "
            android:textSize="25dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.492"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tareas"
            app:layout_constraintVertical_bias="0.06" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="64dp"
            android:layout_height="65dp"
            app:layout_constraintBottom_toBottomOf="@+id/constructora"
            app:layout_constraintEnd_toEndOf="@+id/constructora"
            app:layout_constraintHorizontal_bias="0.876"
            app:layout_constraintStart_toStartOf="@+id/constructora"
            app:layout_constraintTop_toTopOf="@+id/constructora"
            app:layout_constraintVertical_bias="0.555"
            app:srcCompat="@drawable/home" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="55dp"
            android:layout_height="62dp"
            app:layout_constraintBottom_toBottomOf="@+id/tareas"
            app:layout_constraintEnd_toEndOf="@+id/tareas"
            app:layout_constraintHorizontal_bias="0.88"
            app:layout_constraintStart_toStartOf="@+id/tareas"
            app:layout_constraintTop_toTopOf="@+id/tareas"
            app:layout_constraintVertical_bias="0.473"
            app:srcCompat="@drawable/tarea" />
        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="55dp"
            android:layout_height="62dp"
            app:layout_constraintBottom_toBottomOf="@+id/Mapa"
            app:layout_constraintEnd_toEndOf="@+id/Mapa"
            app:layout_constraintHorizontal_bias="0.88"
            app:layout_constraintStart_toStartOf="@+id/Mapa"
            app:layout_constraintTop_toTopOf="@+id/Mapa"
            app:layout_constraintVertical_bias="0.473"
            app:srcCompat="@drawable/img_map" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>